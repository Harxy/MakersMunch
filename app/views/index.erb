<html>
  <body>
  <%if current_user %>
  Welcome, <%= (current_user.full_name).split.map(&:capitalize).join(' ') %>
  <form method='post' action='/log_in'>
    <input type='hidden' name='_method' value='delete'>
    <input type='submit' value='Sign out'>
  </form>
  <%else%>
  Welcome
  <%end%>



  <% if flash[:notice] %>
    <div id='notice'>
      <%= flash[:notice] %>
    </div>
  <% end %>


  </body>
</html>
